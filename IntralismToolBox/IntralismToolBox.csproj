<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net5.0-windows</TargetFramework>
        <UseWindowsForms>true</UseWindowsForms>
        <RootNamespace>ManiaToIntralism</RootNamespace>
        <LangVersion>8</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="HtmlAgilityPack" Version="1.11.28" />
        <PackageReference Include="IntralismManiaConverter" Version="1.1.2" />
        <PackageReference Include="IntralismScoreChecker" Version="1.0.1" />
        <PackageReference Include="NAudio" Version="1.10.0" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="OsuParsers" Version="1.6.5" />
        <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Windows7APICodePack-Shell" Version="1.1.0" />
        <PackageReference Include="xFFmpeg.NET" Version="3.4.0" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="FormSetting.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\UserScoreForm.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\UserProfileForm.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\PlayerListForm.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\AddPlayerForm.cs">
        <SubType>Form</SubType>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <None Update="scores.csv">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="savedplayers.csv">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="config.xml">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Src\Enums" />
    </ItemGroup>

</Project>