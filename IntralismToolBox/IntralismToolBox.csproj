<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>netcoreapp3.0</TargetFramework>
        <UseWindowsForms>true</UseWindowsForms>
        <RootNamespace>ManiaToIntralism</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="HtmlAgilityPack" Version="1.11.25" />
        <PackageReference Include="NAudio" Version="1.10.0" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="Windows7APICodePack-Shell" Version="1.1.0" />
        <PackageReference Include="xFFmpeg.NET" Version="3.4.0" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="FormSetting.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\FormUserScore.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\FormUserProfile.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\FormPlayerList.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\FormAddPlayer.cs">
        <SubType>Form</SubType>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <None Update="scores.csv">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Resources\ManiaMapTemplate.txt">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="savedplayers.csv">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="config.xml">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>