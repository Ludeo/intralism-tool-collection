<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>netcoreapp3.0</TargetFramework>
        <UseWindowsForms>true</UseWindowsForms>
        <RootNamespace>ManiaToIntralism</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="HtmlAgilityPack" Version="1.11.25" />
        <PackageReference Include="NAudio" Version="1.10.0" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
        <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Windows7APICodePack-Shell" Version="1.1.0" />
        <PackageReference Include="xFFmpeg.NET" Version="3.4.0" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="FormSetting.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\UserScoreForm.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\UserProfileForm.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\PlayerListForm.cs">
        <SubType>Form</SubType>
      </Compile>
      <Compile Update="Src\Forms\AddPlayerForm.cs">
        <SubType>Form</SubType>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <None Update="scores.csv">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="Resources\ManiaMapTemplate.txt">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="savedplayers.csv">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
      <None Update="config.xml">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <Reference Include="IntralismManiaConverter, Version=1.0.0.0, Culture=neutral, PublicKeyToken=null">
        <HintPath>..\..\..\Downloads\IntralismManiaConverter.dll</HintPath>
      </Reference>
    </ItemGroup>

</Project>